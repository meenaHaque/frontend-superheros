{
	"env": {
		"browser": true,
		"jest/globals": true
	},
	"extends": ["airbnb", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		},
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": ["react", "jest"],
	"rules": {
		"indent": ["error", 2],
		"quotes": [2, "single"],
		"linebreak-style": [2, "unix"],
		"semi": [2, "always"]
	}
}
